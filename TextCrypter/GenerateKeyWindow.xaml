<Controls:MetroWindow x:Name="Window" x:Class="TextCrypter.GenerateKeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextCrypter"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        Title="初期セットアップ" 
        SizeToContent="Height"
        Width="347" Loaded="Window_Loaded">
    <Grid>
        <Label x:Name="lblDescription" Content="自分の名前を入力してください。（ニックネームでも可）" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>
        <TextBox x:Name="txtName" TextWrapping="Wrap" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0"/>
        <Label x:Name="lblError" Content="!名前を入力してください" HorizontalAlignment="Center" VerticalAlignment="Top" Width="233" Margin="114,65,0,0" Foreground="Red"/>
        <Button x:Name="btnOk" Content="決定" HorizontalAlignment="Center" Margin="0,110,0,30" VerticalAlignment="Top" Height="46" Width="106" FontSize="14" Click="btnOk_Click"/>
    </Grid>
</Controls:MetroWindow>
